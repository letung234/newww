extends ../../layouts/default.pug

block main
  if role.permission.includes("roles_create")
    .container.mx-auto.p-4
      h1(class="text-2xl font-semibold text-gray-700 mb-6") #{pageTitle}

      .bg-white.shadow-lg.rounded-lg.p-6
        form(
          id='create_role'
        )
          div(class="mb-4 form-group")
            label(for="title" class="block text-sm font-medium text-gray-700") Tiêu đề
            input(
              type="text"
              id="title"
              name="title"
              required
              class="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500"
            )
            <span class="form-message"></span>

          div(class="mb-4 form-group")
            label(for="desc" class="block text-sm font-medium text-gray-700") Mô tả
            textarea(
              id="description"
              name="description"
              rows="5"
              class="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500"
            )
            <span class="form-message"></span>

          button(
            type="submit"
            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2 rounded-lg transition duration-200"
          ) Tạo mới
  else 
    // Thông báo khi không có quyền truy cập
    .container.mx-auto.p-4
      .bg-red-100.border.border-red-400.text-red-700.p-4.rounded-md
        p(class="font-semibold") Bạn không đủ quyền truy cập.
block script
  script(type="module" src="/js/role.js")