extends ../../layouts/default.pug

block main
  .w-full.bg-white.shadow-md.rounded-lg.p-8.h-screen
    h2.text-2xl.font-semibold.text-center.text-gray-700.mb-6 Đăng Nhập
    form(id='form-login' method="POST")
      .mb-4.form-group
        label(for="email" class="block text-gray-600 text-sm font-medium mb-2") Email
        input#email(type="email" name="email" placeholder="Nhập email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent")
        <span class="form-message"></span>
      .mb-6.form-group
        label(for="password" class="block text-gray-600 text-sm font-medium mb-2") Mật khẩu
        input#password(type="password" name="password" placeholder="Nhập mật khẩu" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent")
        <span class="form-message"></span>
      button(type="submit" class="w-full bg-indigo-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-600 transition duration-300") Đăng Nhập
block script
  script(type="module" src="/js/users.js")     
