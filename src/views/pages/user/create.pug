extends ../../layouts/default.pug

block main
  if role.permission.includes("accounts_create")
    .container.mx-auto.p-4
      h1.text-2xl.font-bold.mb-4 Thêm Người Dùng
      h4(data= role)
      form(id='create_user' class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4")
        div(class="mb-4 form-group" )
          label(for="name" class="block text-gray-700 text-sm font-bold mb-2") Tên
          input(id='name' type="text" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nhập tên người dùng" )
          <span class="form-message"></span>
        .mb-4.form-group
          label(for="email" class="block text-gray-700 text-sm font-bold mb-2") Email
          input#email(type="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nhập email" )
          <span class="form-message"></span>
        .mb-4.form-group
          label(for="role_id" class="block text-gray-700 text-sm font-bold mb-2") Vai trò
          select#role_id(name="role_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            option(value="" disabled selected) Chọn vai trò
            each role in roles
              option(value=role._id) #{role.title}
          <span class="form-message"></span>
        .mb-4.form-group
          label(for="password" class="block text-gray-700 text-sm font-bold mb-2") Mật khẩu
          input#password(type="password" name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nhập mật khẩu" )
          <span class="form-message"></span>
        .mb-4.form-group
          label(for="is_active" class="inline-flex items-center")
            input#is_active(type="checkbox" name="is_active" class="form-checkbox h-5 w-5 text-blue-600 transition duration-150 ease-in-out")
            span(class="ml-2 text-gray-700 text-sm font-bold ") Kích hoạt
      

        div(class="flex items-center justify-between")
          button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Thêm Người Dùng
          
      a(href="/users" class="text-blue-500 hover:text-blue-800") Quay lại danh sách người dùng
  else 
    // Thông báo khi không có quyền truy cập
    .container.mx-auto.p-4
      .bg-red-100.border.border-red-400.text-red-700.p-4.rounded-md
        p(class="font-semibold") Bạn không đủ quyền truy cập.
block script
  script(type="module" src="/js/users.js")